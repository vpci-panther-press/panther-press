---
import { directusAssetsUrl, type Author } from 'src/lib/directus'

interface Props {
	author: Author
}
const { author } = Astro.props
const image = author.photo ? directusAssetsUrl + author.photo + '?width=400' : '/author/default.jpg'
---

<div
	class='card transition-transform ease-in-out hover:scale-105 cursor-pointer overflow-hidden h-50 rounded-md shadow-xl w-15 sm:min-w-[2rem] max-w-[24rem]'
	style={`background-image: url(${image}); width:10rem;height:10rem`}
	}
>
	<div class='filter h-full w-full justify-between p-4'>
		<div
			class='absolute w-full h-full top-0 left-0 transition duration-300 group-hover/card:opacity-60'
		>
		</div>
		<div class='content'>
			<div class='contentBx'>
				<h3>
					{author.name}<br />
					<span>{author.role}</span>
				</h3>
			</div>
		</div>
		<ul class='sci'>
			<p>{author.board && author.board.length > 1 ? author.board.join(' & ') : author.board}</p>
		</ul>
	</div>
</div>

<style define:vars={{ image }}>
	@keyframes overlay {
		from {
			background-color: rgba(255, 255, 255, 0);
		}
		to {
			background-color: rgba(248, 159, 38, 0.5);
		}
	}

	.card .filter {
		display: flex;
		justify-content: center;
		align-items: flex-end;
	}
	.card .filter:hover {
		animation-name: overlay;
		animation-duration: 0.5s;
		animation-fill-mode: forwards;
	}

	.card {
		position: relative;
		background-image: var(--image);
		box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
		border-radius: 15px;
		backdrop-filter: blur(50px);
		margin-left: 2%;
		margin-bottom: 2%;
		background-size: cover;
		background-position: center;
	}

	.card .content {
		position: absolute;
		top: 0;
		left: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.3);
		flex-direction: column;
		transition: 0.5s;
	}

	.card:hover .content {
		background: rgba(0, 0, 0, 0);
		transform: translateY(-92px);
	}
	:root {
		--text-color: #fff;
	}
	.card .content .contentBx h3 {
		color: var(--text-color) !important;
		text-transform: uppercase;
		letter-spacing: 2px;
		font-weight: 500;
		font-size: 18px;
		text-align: center;
		margin: 20px 0 10px;
		line-height: 1.1em;
	}
	.card .content .contentBx h3 span {
		color: var(--text-color) !important;
		font-size: 12px;
		font-weight: 400;
		text-transform: initial;
	}

	.card .sci {
		position: absolute;
		bottom: 0px;
		display: flex;
	}

	.card .sci p {
		list-style: none;
		margin: 0 10px;
		transform: translateY(40px);
		transition: 0.5s;
		opacity: 0;
		font-size: 10px;
	}

	.card:hover .sci p {
		transform: translateY(0px);
		opacity: 1;
		color: black;
		font-size: 12px;
		font-weight: 300;
		text-transform: initial;
		letter-spacing: 2px;
	}
</style>
