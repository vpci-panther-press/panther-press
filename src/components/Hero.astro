---
import { Image } from 'astro:assets'
import ArrowRight from './icons/ArrowRightS.astro'
import heroImg from 'src/assets/images/nov2023/coverempty.jpg'
---

<!-- Hero -->
<div class='max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8'>
	<!-- Grid -->
	<div class='grid md:grid-cols-2 gap-4 md:gap-8 xl:gap-20 md:items-center'>
		<div class=''>
			<h1
				class='font-manrope mt-4 block font-[750] text-gray-800 text-4xl md:text-5xl lg:text-6xl dark:text-gray-200'
			>
				Victoria Park <br />
				<span class='bg-clip-text bg-gradient-to-tl from-primary to-secondary text-transparent'
					>Panther Press</span
				>
			</h1>
			<p class='mt-7 text-lg text-gray-800 dark:text-gray-400'>
				Welcome to the Panther Press, Victoria Park Collegiate Institute's student-run newspaper. We are a group of
				students who are passionate about writing and journalism.
			</p>

			<!-- Buttons -->
			<div class='mt-7 grid gap-3 w-full sm:inline-flex'>
				<button>
					<a
						class='w-full md:w-auto inline-flex justify-center items-center gap-x-3 text-center transition-all duration-500 bg-size-200 bg-pos-0 hover:bg-pos-100 bg-gradient-to-tl from-primary to-secondary hover:from-tertiary hover:to-primary border border-transparent text-black text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-white py-3 px-4 dark:focus:ring-offset-gray-800'
						href='/articles/1'
					>
						Read Articles
						<ArrowRight />
					</a>
				</button>
				<button>
					<a
						class='w-full md:w-auto relative group inline-flex justify-center items-center gap-x-3 text-center bg-zinc-200 border hover:border-gray-300 shadow-sm text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2 focus:ring-offset-white transition py-3 px-4 dark:bg-slate-900 dark:border-gray-800 dark:hover:border-gray-600 dark:shadow-slate-700/[.7] dark:text-white dark:focus:ring-gray-700 dark:focus:ring-offset-gray-800'
						href='/issues'
					>
						Read Issue
						<ArrowRight />
					</a>
				</button>
			</div>
			<!-- End Buttons -->
		</div>
		<!-- End Col -->

		<div class='sm:inline-block hidden relative ms-4'>
			<Image
				src={heroImg}
				alt='Illustration of a small bunch of red poppies on an orange background'
				format='webp'
				width='512'
				height='300'
				class='h-full min-w-full object-cover'
			/>
			<div
				class='absolute inset-0 -z-[1] bg-gradient-to-tr from-gray-200 via-white/0 to-white/0 w-full h-full rounded-md mt-4 -mb-4 me-4 -ms-4 lg:mt-6 lg:-mb-6 lg:me-6 lg:-ms-6 dark:from-slate-800 dark:via-slate-900/0 dark:to-slate-900/0'
			>
			</div>

			<!-- SVG-->
			<div class='absolute bottom-0 start-0'>
				<!-- svg for the image pixel overlay -->
				<svg
					class='w-2/3 ms-auto h-auto text-white dark:text-slate-900'
					width='630'
					height='451'
					viewBox='0 0 630 451'
					fill='none'
					xmlns='http://www.w3.org/2000/svg'
				>
					<rect x='531' y='352' width='99' height='99' fill='currentColor'></rect>
					<rect x='140' y='352' width='106' height='99' fill='currentColor'></rect>
					<rect x='482' y='402' width='64' height='49' fill='currentColor'></rect>
					<rect x='433' y='402' width='63' height='49' fill='currentColor'></rect>
					<rect x='384' y='352' width='49' height='50' fill='currentColor'></rect>
					<rect x='531' y='328' width='50' height='50' fill='currentColor'></rect>
					<rect x='99' y='303' width='49' height='58' fill='currentColor'></rect>
					<rect x='99' y='352' width='49' height='50' fill='currentColor'></rect>
					<rect x='99' y='392' width='49' height='59' fill='currentColor'></rect>
					<rect x='44' y='402' width='66' height='49' fill='currentColor'></rect>
					<rect x='234' y='402' width='62' height='49' fill='currentColor'></rect>
					<rect x='334' y='303' width='50' height='49' fill='currentColor'></rect>
					<rect x='581' width='49' height='49' fill='currentColor'></rect>
					<rect x='581' width='49' height='64' fill='currentColor'></rect>
					<rect x='482' y='123' width='49' height='49' fill='currentColor'></rect>
					<rect x='507' y='124' width='49' height='24' fill='currentColor'></rect>
					<rect x='531' y='49' width='99' height='99' fill='currentColor'></rect>
				</svg>
			</div>
			<!-- End SVG-->
		</div>
		<!-- End Col -->
	</div>
	<!-- End Grid -->
</div>
<!-- End Hero -->
