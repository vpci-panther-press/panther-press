---
import { cn, sluglify } from 'src/lib/index.ts'
import { CATEGORIES } from '@/data/categories'

const { activeCategory } = Astro.props
const currentPath = Astro.url.pathname
const regex = /^\/articles\/\d+\/?$/
---

<!-- The regex matches /articles/* but not /articles/category/* -->
<div class='flex flex-col'>
	<div class='flex max-w-full min-w-full gap-5'>
		<a
			href='/articles/1'
			class={cn(
				`link`,
				regex.test(currentPath) && `border-black text-black dark:border-white dark:text-white`
			)}
		>
			View All
		</a>
		{
			CATEGORIES.map((category: string) => (
				<a
					href={sluglify(`/articles/category/${sluglify(category.toLowerCase())}/1`)}
					class={cn(
						`link`,
						activeCategory?.toLowerCase() === sluglify(category.toLowerCase()) &&
							`border-black text-black dark:border-white dark:text-white`
					)}
				>
					{category.trim()}
				</a>
			))
		}
	</div>
	<div class='relative bottom-0 -z-40 inline-block w-full border-b-2 dark:border-gray-600'></div>
</div>

<style>
	@reference "../styles/global.css";
	.link {
		@apply border-b-2 pb-2.5 font-medium text-gray-600 transition-colors duration-150 ease-linear first-letter:uppercase hover:text-gray-800 dark:text-gray-300 dark:hover:text-gray-200;
	}
</style>
