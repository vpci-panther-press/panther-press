---
export interface Props {
	tag: string
	category: boolean
}
const { tag, category } = Astro.props
---

{
	category ? (
		<a href={`/category/${tag}`} aria-label={tag}>
			<span class='bg-transparent font-semibold border border-black dark:border-white text-sm w-fit px-2 py-1 md:px-3 md:py-1.5 rounded-md'>
				{`${tag}` ?? 'Category'}
			</span>
		</a>
	) : (
		<a href={`/tags/${tag}`} aria-label={tag}>
			<span class='bg-transparent font-semibold border border-black dark:border-white text-sm w-fit px-2 py-1 md:px-3 md:py-1.5 rounded-md'>
				{`#${tag}` ?? 'Blog Tag'}
			</span>
		</a>
	)
}
