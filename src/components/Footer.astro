---
import Logo from './icons/Logo.astro'
const today = new Date()
---

<footer class='border-t-2 border-zinc-200 dark:border-zinc-600 bg-zinc-100 dark:bg-zinc-950'>
	<div class='max-w-[85rem] py-10 px-4 sm:px-6 lg:px-8 lg:pt-16 mx-auto'>
		<!-- Grid -->
		<div class='grid grid-cols-2 lg:grid-cols-3 gap-6'>
			<div class='col-span-full lg:col-span-1'>
				<a
					class='flex-none text-2xl font-semibold text-slate-950 dark:text-white'
					href='/'
					aria-label='Brand'
					><div class='flex flex-row gap-x-2 items-center'>
						<Logo width={24} height={24} /> Panther Press
					</div></a
				>
			</div>
			<!-- End Col -->

			<div class='col-span-1'>
				<h1 class='font-semibold text-gray-800 dark:text-gray-100'>Articles</h1>

				<div class='mt-3 grid space-y-3'>
					<p><a class='link' href='/articles'>All Articles</a></p>
					<p><a class='link' href='category/life'>Life Board</a></p>
					<p><a class='link' href='category/news'>News Board</a></p>
					<p><a class='link' href='category/editorial'>Editorials</a></p>
				</div>
			</div>
			<!-- End Col -->

			<div class='col-span-1'>
				<h1 class='font-semibold text-gray-800 dark:text-gray-100'>Press</h1>

				<div class='mt-3 grid space-y-3'>
					<p><a class='link' href='/about-us'>About Us</a></p>
					<p><a class='link' href='/issues'>Issues</a></p>
					<p><a class='link' href='/tags'>Tags</a></p>
				</div>
			</div>

			<!-- End Col -->
		</div>
		<!-- End Grid -->

		<div class='mt-5 sm:mt-12 grid gap-y-2 sm:gap-y-0 sm:flex sm:justify-between sm:items-center'>
			<div class='flex justify-between items-center'>
				<p class='text-sm text-gray-600 dark:text-slate-200'>
					&copy; {today.getFullYear()} VPCI Panther Press. All Rights Reserved.
				</p>
			</div>
			<!-- End Col -->
		</div>
	</div>
</footer>

<style>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;
	@layer components {
		.link {
			@apply inline-flex gap-x-2 text-slate-700 hover:text-slate-500 dark:text-gray-400 dark:hover:text-gray-200;
		}
	}
</style>
