---
const { page } = Astro.props

const pageNumbers = Array.from({ length: page.lastPage }, (_, index) => index + 1)
---

<script>
	function removeItems() {
		const pgcont = document.querySelector('#pg')
		const pgitems = pgcont!.children
		const pgnum = parseInt(pgcont!.getAttribute('data-total-items') ?? '0')
		// console.log(pgcont, pgitems, pgcont?.childElementCount, pgcont?.children.length)
		if (window.innerWidth < 640 && pgnum > 3) {
			for (let i = 0; i < pgnum - 1; i++) {
				if (i > 1 && i != pgnum - 1) {
					pgcont?.removeChild(pgitems[2])
				}
				if (i === pgnum - 2) {
					const textNode = document.createTextNode('...')
					pgcont!.insertBefore(textNode, pgcont!.childNodes[3])
				}
			}
		}
	}
	document.addEventListener('astro:after-swap', removeItems)
	removeItems()
</script>

<nav class='flex justify-center items-center gap-x-1'>
	<a href={page.url.prev}>
		<button
			type='button'
			class='min-h-[38px] min-w-[38px] py-2 px-2.5 inline-flex justify-center items-center gap-x-1.5 text-sm rounded-lg text-zinc-800 hover:bg-zinc-100 focus:outline-none focus:bg-zinc-100 disabled:opacity-50 disabled:pointer-events-none dark:text-white dark:hover:bg-white/10 dark:focus:bg-white/10'
			disabled={page.start > 0 ? false : true}
		>
			<svg
				class='flex-shrink-0 w-3.5 h-3.5'
				xmlns='http://www.w3.org/2000/svg'
				width='24'
				height='24'
				viewBox='0 0 24 24'
				fill='none'
				stroke='currentColor'
				stroke-width='2'
				stroke-linecap='round'
				stroke-linejoin='round'><path d='m15 18-6-6 6-6'></path></svg
			>
			<span>Previous</span>
		</button>
	</a>
	<div
		id='pg'
		class='flex items-center gap-x-1'
		data-total-items={page.lastPage}
		data-current-page={page.currentPage}
	>
		{
			pageNumbers.map((pageNumber) => (
				<a
					href={`${page.url.current.replace(/\/\d+$/, `/${pageNumber}`)}`}
					class={`min-h-[38px] min-w-[38px] py-2 px-2.5 inline-flex justify-center items-center gap-x-1.5 text-sm rounded-lg text-zinc-800  focus:outline-none focus:bg-zinc-100 disabled:opacity-50 disabled:pointer-events-none dark:text-white  dark:focus:bg-white/10 ${
						page.currentPage === pageNumber
							? ' bg-zinc-200 dark:bg-zinc-600 focus:bg-zinc-300 dark:focus:bg-zinc-500'
							: 'hover:bg-zinc-100 dark:hover:bg-white/10'
					}`}
				>
					{pageNumber}
				</a>
			))
		}
	</div>
	<a href={page.url.next}>
		<button
			type='button'
			class='min-h-[38px] min-w-[38px] py-2 px-2.5 inline-flex justify-center items-center gap-x-1.5 text-sm rounded-lg text-zinc-800 hover:bg-zinc-100 focus:outline-none focus:bg-zinc-100 disabled:opacity-50 disabled:pointer-events-none dark:text-white dark:hover:bg-white/10 dark:focus:bg-white/10'
			disabled={page.currentPage < page.lastPage ? false : true}
		>
			<span>Next</span>
			<svg
				class='flex-shrink-0 w-3.5 h-3.5'
				xmlns='http://www.w3.org/2000/svg'
				width='24'
				height='24'
				viewBox='0 0 24 24'
				fill='none'
				stroke='currentColor'
				stroke-width='2'
				stroke-linecap='round'
				stroke-linejoin='round'><path d='m9 18 6-6-6-6'></path></svg
			>
		</button>
	</a>
</nav>
