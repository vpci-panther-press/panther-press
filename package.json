{
	"name": "panther-press",
	"version": "1.1.0",
	"private": true,
	"scripts": {
		"dev": "astro dev",
		"dhost": "astro dev --host",
		"start": "astro dev",
		"build": "astro build",
		"sync": "astro sync",
		"preview": "wrangler pages dev ./dist",
		"postbuild": "pagefind --site dist",
		"format:check": "prettier --plugin-search-dir=. --check .",
		"format": "prettier --plugin-search-dir=. --write .",
		"lint": "eslint .",
		"pre-commit": "lint-staged",
		"prepare": "husky"
	},
	"dependencies": {
		"@astrojs/cloudflare": "^12.1.0",
		"@astrojs/react": "^4.1.2",
		"@astrojs/rss": "4.0.11",
		"@directus/sdk": "^18.0.3",
		"@fontsource-variable/inter": "^5.1.1",
		"@fontsource-variable/manrope": "^5.1.1",
		"@fontsource/atkinson-hyperlegible": "^5.1.1",
		"@keystatic/astro": "^5.0.3",
		"@keystatic/core": "^0.5.42",
		"@preline/collapse": "^2.6.0",
		"@radix-ui/react-label": "^2.1.1",
		"astro": "5.1.1",
		"class-variance-authority": "^0.7.1",
		"framer-motion": "^11.15.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"sanitize-html": "^2.14.0"
	},
	"devDependencies": {
		"@astrojs/mdx": "4.0.3",
		"@astrojs/sitemap": "3.2.1",
		"@astrojs/tailwind": "5.1.4",
		"@pagefind/default-ui": "^1.3.0",
		"@tailwindcss/typography": "0.5.15",
		"@types/eslint-plugin-jsx-a11y": "~6.10.0",
		"@types/lint-staged": "~13.3.0",
		"@types/react": "^19.0.2",
		"@types/react-dom": "^19.0.2",
		"@types/sanitize-html": "^2.13.0",
		"@typescript-eslint/parser": "^8.19.0",
		"clsx": "2.1.1",
		"eslint": "^9.17.0",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"husky": "^9.1.7",
		"lint-staged": "^15.3.0",
		"mdast-util-to-string": "^4.0.0",
		"pagefind": "^1.3.0",
		"prettier": "^3.5.2",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.14.1",
		"tailwind-merge": "2.6.0",
		"tailwindcss": "3.4.17",
		"typescript": "^5.7.2",
		"wrangler": "^3.99.0"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
			"prettier --write --plugin-search-dir=. --ignore-path=.prettierignore --no-error-on-unmatched-pattern"
		]
	}
}
