{
	"name": "panther-press",
	"version": "1.1.0",
	"private": true,
	"scripts": {
		"dev": "node generate-seasonal-colors.js && astro dev",
		"dhost": "astro dev --host",
		"start": "astro dev",
		"build": "node generate-seasonal-colors.js && astro build",
		"sync": "astro sync",
		"preview": "wrangler pages dev ./dist",
		"postbuild": "pagefind --site dist",
		"format:check": "prettier --plugin-search-dir=. --check .",
		"format": "prettier --plugin-search-dir=. --write .",
		"lint": "eslint .",
		"pre-commit": "lint-staged",
		"prepare": "husky"
	},
	"dependencies": {
		"@astrojs/cloudflare": "^12.4.0",
		"@astrojs/react": "^4.2.3",
		"@astrojs/rss": "4.0.11",
		"@astrojs/tailwind": "^6.0.2",
		"@directus/sdk": "^19.1.0",
		"@fontsource-variable/inter": "^5.2.5",
		"@fontsource-variable/manrope": "^5.2.5",
		"@fontsource/atkinson-hyperlegible": "^5.2.5",
		"@keystatic/astro": "^5.0.6",
		"@keystatic/core": "^0.5.46",
		"@preline/collapse": "^3.0.0",
		"@radix-ui/react-label": "^2.1.3",
		"@tailwindcss/vite": "^4.1.3",
		"astro": "5.6.1",
		"class-variance-authority": "^0.7.1",
		"framer-motion": "^12.6.3",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"sanitize-html": "^2.15.0"
	},
	"devDependencies": {
		"@astrojs/mdx": "4.2.3",
		"@astrojs/sitemap": "3.3.0",
		"@pagefind/default-ui": "^1.3.0",
		"@tailwindcss/typography": "0.5.16",
		"@types/eslint-plugin-jsx-a11y": "~6.10.0",
		"@types/lint-staged": "~13.3.0",
		"@types/react": "^19.1.0",
		"@types/react-dom": "^19.1.2",
		"@types/sanitize-html": "^2.15.0",
		"@typescript-eslint/parser": "^8.29.1",
		"clsx": "2.1.1",
		"eslint": "^9.24.0",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"mdast-util-to-string": "^4.0.0",
		"pagefind": "^1.3.0",
		"prettier": "^3.5.3",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwind-merge": "3.2.0",
		"tailwindcss": "4.1.3",
		"typescript": "^5.8.3",
		"wrangler": "^4.9.1"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
			"prettier --write --plugin-search-dir=. --ignore-path=.prettierignore"
		]
	}
}
